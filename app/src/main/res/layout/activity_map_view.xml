<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MapViewActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mag.slam3dvideo.ui.components.SurfaceMediaPlayerControl
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#00ff00"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">

            <Button
                android:id="@+id/fpsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fps" />
            <Button
                android:id="@+id/planeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="regenPlane" />
            <Button
                android:id="@+id/offsetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="frameOffset" />
            <Button
                android:id="@+id/exportScene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exportScene" />
            <CheckBox
                android:id="@+id/editModeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="edit mode"
                android:checked="true"/>
            <CheckBox
                android:id="@+id/videoShowCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="show video"
                android:checked="true"/>
            <Button
                android:id="@+id/exportMetrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exportMetrics" />
            <CheckBox
                android:id="@+id/pointVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="points visible"
                android:checked="true"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>